<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Module/etc/module.xsd">
    <system>
        <tab id="training" sortOrder="100">
            <label>Training</label>
        </tab>
        
        <section id="training" sortOrder="300" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>training</tab>
            <label>Training Now</label>
            <resource>Training_IfConfigExample::config</resource>

            <group id="ifconfig" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>If Config</label>

                <field id="enable" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable or Disable</comment>
                </field>
            </group>
        </section>
    </system>
</config>
